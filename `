puts 'Salut, bienvenue dans ma super pyramide ! Combien d Ã©tages veux-tu ?'

number = 0
loop do # Mise en place de la limite et la condition de 25
  number = gets.chomp.to_i
  break if number < 25
end

puts number
i = 0
j = 0
# Mise en places des colonnes
while i < number
  puts '#'
  i += 1
  while j < number
    print '#'
    j += 1
  end
end
